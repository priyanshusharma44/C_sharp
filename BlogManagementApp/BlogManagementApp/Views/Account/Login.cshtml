@model UserListEdit
@{
    Layout = "_StaticLayout";
    ViewData["Title"] = "Login";
}

<form asp-action="Login" class="mx-auto max-w-sm">
    <div class="mb-5">
        <label asp-for="EmailAddress" for="email" class="mb-2 text-gray-900 block text-sm font-medium dark:text-white">Your email</label>
        <input asp-for="EmailAddress" type="email" id="email" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="name@flowbite.com" required />
        <span asp-validation-for="EmailAddress"></span>
    </div>
    <div class="mb-5">
        <label asp-for="UserPassword" for="password" class="mb-2 text-gray-900 block text-sm font-medium dark:text-white">Your password</label>
        <input asp-for="UserPassword" type="password" id="password" class="bg-gray-50 border-gray-300 text-gray-900 p-2.5 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required />
        <span asp-validation-for="UserPassword"></span>
    </div>
    <div class="mb-5 flex items-start">
        <div class="h-5 flex items-center">
            <input id="remember" type="checkbox" value="" class="w-4 h-4 border-gray-300 bg-gray-50 rounded border focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:ring-offset-gray-800 dark:focus:ring-blue-600 dark:focus:ring-offset-gray-800" required />
        </div>
        <label for="remember" class="ms-2 text-gray-900 text-sm font-medium dark:text-gray-300">Remember me</label>
    </div>
    <div class="flex justify-between items-center mb-5">
        <button type="submit" value="Login" class="text-white bg-blue-700 px-5 py-2.5 w-full rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 sm:w-auto dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
        <a asp-action="Create" asp-controller="Home" class="text-white bg-green-500 px-5 py-2.5 rounded-lg text-center text-sm font-medium hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 sm:w-auto dark:hover:bg-green-700 dark:focus:ring-green-800">Register</a>
    </div>
</form>
