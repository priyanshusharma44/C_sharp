@model BlogContentEdit
@{
    ViewData["Title"] = "Delete Blog Post";
}

<div style="margin-top:100px" class="max-w-md mx-auto mt-24 bg-white p-8 rounded-lg shadow-md">
    <div class="bg-red-700 text-white text-center py-2.5 rounded-t-lg">
        <h2 class="text-xl font-bold">Delete Blog Post</h2>
    </div>
    <form asp-action="Delete" asp-controller="Blog" data-ajax="true" data-ajax-method="post" data-ajax-complete="BlogDeleteData" class="px-8 py-6">
        <div class="text-red-400 mb-4" asp-validation-summary="ModelOnly"></div>

        <p>Are you sure you want to delete this blog post?</p>

        <div class="relative mb-6">
            <p><strong>Section Heading:</strong> @Model.SectionHeading</p>
        </div>

        <div class="relative mb-6">
            <p><strong>Section Description:</strong> @Model.SectionDescription</p>
        </div>

        <div class="relative mb-6">
            <p><strong>Post Date:</strong> @Model.PostDate</p>
        </div>

        <div class="flex justify-center">
            <input type="submit" class="w-full sm:w-auto bg-red-700 hover:bg-red-800 text-white font-medium rounded-lg px-5 py-2.5 focus:outline-none focus:ring-4 focus:ring-red-300" value="Delete" />
        </div>
    </form>
</div>

<script>
    function BlogDeleteData(e) {
        if (e.responseText === "Success") {
            alert("Blog post deleted successfully");
        } else {
            alert("Failed to delete blog post");
        }
    }
</script>
