@model IEnumerable<BlogManagementApp.Models.BlogContentEdit>

<!DOCTYPE html>
<html>
<head>
    <title>Blog Index</title>
</head>
<style>
    body {
        margin-top: 100px;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    a {
        color: #3498db;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<body>
    <h1><strong>Blog Contents</strong></h1>
    <table>
        <thead>
            <tr>
                <th>Section Heading</th>
                <th>Section Description</th>
                <th>Post Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SectionHeading</td>
                    <td>@item.SectionDescription</td>
                    <td>@item.PostDate</td>
                    <td>
                        <a href="@Url.Action("Details", "Blog", new { id = item. Bid})">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
