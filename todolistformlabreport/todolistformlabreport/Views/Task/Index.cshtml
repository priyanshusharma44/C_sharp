@model IEnumerable<todolistformlabreport.Models.ToDoTask>

@{
    ViewData["Title"] = "To-Do List";
}

<h1>To-Do List</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@(task.IsCompleted ? "Completed" : "Pending")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-secondary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
