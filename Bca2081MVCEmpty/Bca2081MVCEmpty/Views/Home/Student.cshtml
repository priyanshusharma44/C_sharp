    @model List<Student>
    @* @{
        //from parent we imported and the htmnl tags are defined in _Layout with css and js so
            //no need to add them again and again
        Layout= "_Layout";
    } *@
    <p>List Of Students</p>
    <a asp-action="Register" asp-controller="Home" class="btn btn-info">Register Student</a>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Fee</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Fee</td>
                    <td>
                       <a asp-action="Edit" asp-controller="Home" asp-route-id="@Model[i].Id" class="btn btn-primary">Edit</a>

                    <a asp-action="Delete"
                       asp-controller="Home"
                       asp-route-id="@Model[i].Id"
                       onclick="return confirm('Are you sure you want to delete @Model[i].Name?')"
                       class="btn btn-danger">
                        Delete
                    </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
